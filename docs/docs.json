{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "almond",
  "name": "Levelset",
  "ai": {
    "enabled": true
  },
  "colors": {
    "primary": "#31664a",
    "light": "#4a9d6e",
    "dark": "#264d38"
  },
  "logo": {
    "light": "/images/logo.png",
    "dark": "/images/logo-dark.png",
    "href": "https://app.levelset.io"
  },
  "favicon": "/images/favicon.ico",
  "fonts": {
    "heading": {
      "family": "Mont",
      "weight": 700,
      "source": "/fonts/Mont-Bold.woff2",
      "format": "woff2"
    },
    "body": {
      "source": "https://fonts.cdnfonts.com/css/satoshi",
      "format": "woff2",
      "family": "Satoshi"
    }
  },
  "seo": {
    "metatags": {
      "canonical": "https://docs.levelset.io"
    }
  },
  "search": {
    "placeholder": "Search or ask a question..."
  },
  "navigation": {
    "groups": [
      {
        "group": "Get Started",
        "pages": [
          "index",
          "overview",
          "getting-started/getting-started"
        ]
      },
      {
        "group": "Positional Excellence",
        "pages": [
          "positional-excellence/overview",
          "positional-excellence/submitting-ratings",
          "positional-excellence/pea-classic"
        ]
      },
      {
        "group": "Discipline",
        "pages": [
          "discipline/overview",
          "discipline/submitting-infractions",
          "discipline/viewing-history"
        ]
      },
      {
        "group": "Roster Management",
        "pages": [
          "roster-management/overview",
          "roster-management/adding-employees",
          "roster-management/managing-roles"
        ]
      },
      {
        "group": "Organization Settings",
        "pages": [
          {
            "group": "Users and Security",
            "pages": [
              "organization-settings/roles"
            ]
          },
          {
            "group": "Discipline",
            "pages": [
              "organization-settings/discipline"
            ]
          },
          {
            "group": "Positional Excellence",
            "pages": [
              "organization-settings/positions",
              "organization-settings/rating-criteria"
            ]
          },
          "organization-settings/overview",
          "organization-settings/users"
        ]
      }
    ]
  },
  "footerSocials": {
    "website": "https://levelset.io"
  },
  "background": {
    "decoration": "grid"
  },
  "navbar": {
    "links": [
      {
        "label": "Report a Bug",
        "href": "https://roadmap.levelset.io"
      },
      {
        "label": "Dashboard",
        "href": "https://app.levelset.io/auth/login"
      }
    ]
  },
  "footer": {
    "socials": {
      "website": "https://levelset.io"
    }
  }
}
